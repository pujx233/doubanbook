/* pages/search/search.wxss */
.wrapper-scroll {
  position:fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
  overflow:auto
}

.banner-box{
  position: relative;
  height: 400rpx
}
.banner-bg{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 400rpx;
  background: #ffac2d    
}
.slide-image{
   width: 100%;
   height: 100%
}
.search-box{
  position: absolute;
  z-index: 2;
  width: 690rpx;
  height: 80rpx;
  margin: 0 30rpx;
  display:flex;
  flex-wrap: wrap;
  justify-content: space-around;
  top: 246rpx;
  border: 1rpx solid #c47a19;
  box-shadow: 0 0 3rpx #c47a19;
  border-radius: 12rpx;
  background: #fff;
    
}
.search-icon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx 0 0 10rpx;
  display: flex; 
  justify-content: center;
  align-items: center
}
.search-icon image{ 
  width: 40rpx;
  height: 40rpx;

  
}
.search-input{
  width: 480rpx;
  height: 80rpx;
  color: #989898;
  font-size: 30rpx;
  border: none;
  padding-right: 10rpx;
  line-height: 80rpx
}
.search-btn{ 
  width: 120rpx;
  height: 80rpx;
  background: #2d2d2d;
  color: white;
  font-size: 30rpx;
  border-color: #2d2d2d;
  border-radius: 0 10rpx 10rpx 0;
  line-height: 80rpx;
  text-align: center

}
.logo {
  text-align: center;
  padding-top: 200rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #aaa;
}

.logo image {
  width: 250rpx;
  height: 250rpx;
}