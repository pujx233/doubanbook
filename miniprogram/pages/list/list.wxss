/**列表**/
.ibox-list{  
  
  padding: 30rpx;     
}
.ibox-list-nav{ 
  background: #fff;
  position: relative
}
.ibox-list-nav view::after{
  clear:both;
  content:'.';
  display:block;
  width: 0;
  height: 0;
  visibility:hidden;
}
.ibox-list-img{
  width: 210rpx;
  height: 280rpx;
  float: left;
}
.ibox-list-infos{
  width: 450rpx;  
  float: right;
}
.ibox-list-author{
  font-size: 28rpx;
  color: #656565;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 38rpx;
  margin-bottom: 6rpx;
}
.ibox-list-title{
  font-size: 34rpx;
  color: #2d2d2d;
  display: block;
  text-overflow: ellipsis;
  margin-top: 4rpx;
}
.ibox-list-star{
  margin:12rpx 0 14rpx;
}


.ibox-list-tags text{
  position: relative;
  font-size: 24rpx;
  color: #ffac2d;
  padding: 12rpx 16rpx;
  display: inline-block;
  margin-right: 14rpx;
  margin-bottom: 10rpx;

}

.ibox-list-tags text::after {
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border:1px solid #ffac2d;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
  border-radius:6px;

}

.ibox-list-summary{
  font-size: 28rpx;
  color: #656565;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
  line-height: 38rpx
}
.widget-line {
  content:" ";
  position:absolute;
  left:30rpx;
  top:0;
  right:30rpx;
  height:1px; 
  background-color:#F0F0F0;
  -webkit-transform:scaleY(0.5);
  transform:scaleY(0.5);

}


