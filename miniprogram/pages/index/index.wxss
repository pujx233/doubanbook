/**index.wxss**/
.wrapper-scroll {
  position:fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
  overflow:auto
}

.banner-box{
  position: relative;
  height: 400rpx
}
.banner-bg{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 400rpx;
  background: #ffac2d    
}
.slide-image{
   width: 100%;
   height: 100%
}
.search-box{
  position: absolute;
  z-index: 2;
  width: 690rpx;
  height: 80rpx;
  margin: 0 30rpx;
  display:flex;
  flex-wrap: wrap;
  justify-content: space-around;
  top: 246rpx;
  border: 1rpx solid #c47a19;
  box-shadow: 0 0 3rpx #c47a19;
  border-radius: 12rpx;
  background: #fff;
    
}
.search-icon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx 0 0 10rpx;
  display: flex; 
  justify-content: center;
  align-items: center
}
.search-icon image{ 
  width: 40rpx;
  height: 40rpx;

  
}
.search-input{
  width: 480rpx;
  height: 80rpx;
  color: #989898;
  font-size: 30rpx;
  border: none;
  padding-right: 10rpx;
  line-height: 80rpx
}
.search-btn{ 
  width: 120rpx;
  height: 80rpx;
  background: #2d2d2d;
  color: white;
  font-size: 30rpx;
  border-color: #2d2d2d;
  border-radius: 0 10rpx 10rpx 0;
  line-height: 80rpx;
  text-align: center

}

/**感兴趣**/
.wrapper-content{
  background: #fff;
  padding: 30rpx;
 
}
.ibox-top{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between
}
.ibox-title{
  font-size: 30rpx;
  color: #2d2d2d;
  text-overflow: ellipsis;
}
.ibox-refresh{
   font-size: 30rpx;
   color: #989898;
   
}
.list-container{
  padding: 20rpx 0  0;
  width: 690rpx;
  overflow: hidden;
 
}
.list-container view::after{
  clear:both;
  content:'.';
  display:block;
  width: 0;
  height: 0;
  visibility:hidden;
}
.list-ui{
  width: 732rpx; 
}
.list-ui .list-nav{
  width:202rpx;
  float: left;
  margin-bottom: 50rpx;
  margin-right: 42rpx;
}
.book-item{ width:202rpx;}
.book-item-img{ 
  width: 202rpx;
  height: 282rpx;
}
.book-title{
  font-size: 28rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 10rpx 0 6rpx;
}
.average-rating{
  font-size: 26rpx;
  color: #989898;
}
.star-img{
  width: 130rpx;
  height: 24rpx;
  display: inline-block;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  margin-right: 5rpx;
  
}